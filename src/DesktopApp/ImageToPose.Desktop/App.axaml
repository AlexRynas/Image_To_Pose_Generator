<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ImageToPose.Desktop.App"
             xmlns:local="using:ImageToPose.Desktop"
             RequestedThemeVariant="Dark">
             <!-- Theme is managed by ThemeService; Dark is default -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://ImageToPose.Desktop/Styles/Base.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary x:Key="ThemeBucket">
            <!-- ThemeService will swap this merged include between Light/Dark -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://ImageToPose.Desktop/Styles/Themes/DarkTheme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>